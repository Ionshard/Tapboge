.container.col-sm-12.login
  form.form(name='form', ng-submit='login(form)', novalidate='')
    .form-group
      label Email
      input.form-control(type='text', name='email', ng-model='user.email')
    .form-group
      label Password
      input.form-control(type='password', name='password', ng-model='user.password')

    .form-group.has-error
      p.help-block(ng-show='form.email.$error.required && form.password.$error.required && submitted')
        | Please enter your email and password.
      p.help-block {{ errors.other }}

    div
      button.btn.btn-default.btn-login(type='submit')
        | Login
      = ' '
    hr

    div
      a.disabled.btn.btn-facebook(href='', ng-click='loginOauth("facebook")')
        i.fa.fa-facebook
        |  Connect with Facebook
      = ' '
      a.disabled.btn.btn-google-plus(href='', ng-click='loginOauth("google")')
        i.fa.fa-google-plus
        |  Connect with Google+
      = ' '
      a.disabled.btn.btn-twitter(href='', ng-click='loginOauth("twitter")')
        i.fa.fa-twitter
        |  Connect with Twitter
